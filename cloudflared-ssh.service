[Unit]
Description=Cloudflared SSH Tunnel
After=network.target
StartLimitIntervalSec=0

[Service]
Type=simple
Restart=always
RestartSec=5
User=brad
ExecStart=/usr/local/bin/cloudflared tunnel --config /home/brad/.cloudflared/ssh-config.yml run
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target